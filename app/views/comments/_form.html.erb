<div class="form">	
	<%= form_for [@post, @comment] do |f| %>
	<div class="form-group">
	  <div class="label">
	  <%= f.label :name %>
	 	</div>
	  <%= f.text_field :name %>
	 </div>
	 <div class="form-group">
	 <div class="label">
	  <%= f.label :content %>
	 </div>
	  <%= f.text_area :content, :cols => "75", :rows => "10" %>
	 </div>
	 
	  <p><%= f.submit %></p>
	<% end %>
</div>