<div class="form">
	<%= form_for @post do |f| %>
	 <div class="form-group">
	  <%= f.label :title %>
	  <%= f.text_field :title %>
	 </div>
	 <div class="form-group">
	  <%= f.label :date %>
	  <%= f.text_field :date %>
	 </div>
	 <div class="form-group"> 
	  <%= f.label :content %>
	  <%= f.text_area :content %>
	 </div>
	  <%= f.submit %>
	<% end %>
</div>