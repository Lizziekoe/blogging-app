<h1><%= @post.title %></h1>
<h5><%= @post.date %></h5>
<p><%= @post.content %></p>
<p><%= link_to "Return Home", posts_path %></p>
<p><%= link_to "Edit", edit_post_path(@post), class: ['btn','btn-warning'] %></p>
<%= link_to 'Delete Post', post_path(@post), class: ['btn','btn-danger'], method: "delete"  %>






<% if @post.comments.any? %>
  <h4>Here are the comments for this post:</h4>

  <ul>
    <% @post.comments.each do |comment| %>
      <li>
        <%= comment.name %> posted: <%= comment.content %> |
        <%= link_to "Edit", edit_post_comment_path(@post, comment) %> |
        <%= link_to "Delete", post_comment_path(@post, comment), :method => "delete" %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>There are no comments yet!</p>
<% end %>




<p><%= link_to "Comment on Post", new_post_comment_path(@post) %></p>		

<p><%= link_to "Return to Posts", posts_path %></p>	
