<h1 class="postTitle"><%= @post.title %></h1>
<h5 class="postDate"><%= @post.date %></h5>
<p class="postContent"><%= @post.content %></p>
<ul>
<li class="patch"><%= link_to "Edit Post", edit_post_path(@post) %> |
<%= link_to 'Delete Post', post_path(@post), method: "delete"  %> </li>
</ul>






<% if @post.comments.any? %>
  <h4 class="comment">Here are the comments for this post:</h4>

  <ul>
    <% @post.comments.each do |comment| %>
      <li class="comment">
        <%= comment.name %> posted: <%= comment.content %> |
        <%= link_to "Edit", edit_post_comment_path(@post, comment) %> |
        <%= link_to "Delete", post_comment_path(@post, comment), :method => "delete" %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p class="comment">There are no comments yet!</p>
<% end %>




<p class="comment"><%= link_to "Comment on Post", new_post_comment_path(@post) %></p>		

<p><%= link_to "Home", posts_path %></p>
